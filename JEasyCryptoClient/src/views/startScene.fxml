<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml" fillWidth="true" alignment="center">
<Label fx:id="errorLabel" text="" style="-fx-font-weight: bold; -fx-text-fill: red;"/>
  <Label text="Enter the server address (ex:127.0.0.0)" style="-fx-font-weight: bold"/>
  <HBox alignment="center" spacing="10">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextField fx:id="serverAddrTextField" prefColumnCount="20"/>
    <Button fx:id="startButton" text="Start" onAction="#handleButtonAction"/>
  </HBox>
</VBox>